<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="play.doudou.daily_voc.app.MainActivity">

    <TextView android:id="@+id/current_voc"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text = "@string/current_voc"
        android:textSize="24sp"
        android:padding="8dp" />

    <TextView android:id="@+id/voc_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/current_voc"
        android:layout_toRightOf="@id/current_voc"
        android:text="NaN"
        android:textSize="24sp"
        android:padding="8dp" />

    <TextView android:id="@+id/current_temperature"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_voc"
        android:text = "@string/current_temperature"
        android:textSize="24sp"
        android:padding="8dp" />

    <TextView android:id="@+id/temperature_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/current_temperature"
        android:layout_toRightOf="@id/current_temperature"
        android:text="NaN"
        android:textSize="24sp"
        android:padding="8dp" />

    <TextView android:id="@+id/current_humidity"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_temperature"
        android:text = "@string/current_humidity"
        android:textSize="24sp"
        android:padding="8dp" />

    <TextView android:id="@+id/humidity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/current_humidity"
        android:layout_toRightOf="@id/current_humidity"
        android:text="NaN"
        android:textSize="24sp"
        android:padding="8dp" />

    <Button
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/refresh"
        android:textSize="24sp"
        android:padding="8dp" />

</RelativeLayout>
